{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe 生成活动文件",
			"command": "D:\\MinGW\\bin\\gcc.exe",//指定编译器
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",//被编译的文件
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"//指定生成的可执行文件的路径
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: D:\\MinGW\\bin\\gcc.exe"
		}
	]
}